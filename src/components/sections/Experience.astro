---
import Section from "../Section.astro";

import { work } from "@cv";
---

<Section title="Professional Experience">
  <ul>
    {
      work.map(({ name, startDate, endDate, position, summary, url, responsibilities }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : "Current";
        const years = `${startYear} - ${endYear}`;

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    <a href={url} title={`See ${name}`} target="_blank">
                      {name}
                    </a>
                  </h3>
                  <h4>{position}</h4>
                </div>

                <time>{years}</time>
              </header>

              <footer>
                <p>{summary}</p>
                {responsibilities && responsibilities.length > 0 && (
                  <ul class="responsibilities">
                    {responsibilities.map((responsibility) => (
                      <li>{responsibility}</li>
                    ))}
                  </ul>
                )}
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  .responsibilities {
    margin-top: 8px;
    padding-left: 20px;
    list-style-type: disc;
  }

  .responsibilities li {
    color: #666;
    font-size: 0.85rem;
    line-height: 1.4;
    margin-bottom: 2px;
    display: list-item;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
